{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
//    "declaration": true,
//    "declarationDir": "dist/types",
    "experimentalDecorators": true,
    "inlineSources": true,
    "lib": [
      "dom",
      "es5",
      "es2016"
    ],
    "module": "commonjs",
//    "module": "es2015", // will support tree shaking
    "moduleResolution": "node",
//    "noImplicitAny": true,
    "sourceMap": true,
    "strictNullChecks": true,
//    "strict": true,
    "target": "es5" // changed from es5 to es2015 while testing tree shaking
    // conflict between uglifysj which needs es5 and tree shaking
//    "typeRoots": [
//      "node_modules/@types"
//    ]
  },
  "exclude": [
    "node_modules",
    "app/scripts/tally.ts"
  ],
  "include": [
    "app/scripts/library.ts"
  ]
}

